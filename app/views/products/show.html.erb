
<h2 class='title'> 
    <%= @product.title %>
</h2>

<%= image_tag @product.photo if @product.photo.attached? %>

<p class='description'> 
    <%= @product.description %>
</p>

<span class='price'> 
   $ <%= @product.price %>
</span>

<div>
    <%= link_to t('.edit'), edit_product_path(@product) %>
    <%= link_to t('.delete'), product_path(@product), data:{ 
        turbo_method: :delete,
        turbo_confirm: t('common.confirm')
        } %>
</div>